{
  "expo": {
    "name": "pokemont",
    "slug": "pokemont",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/download.jpg",
    "scheme": "pokemont",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/download.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.lombrinha.pokemont"
    },
    "androidNavigationBar": {
      "visible": "immersive"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/download.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d98a808d-18aa-48a5-bb6e-df828aaebecc"
      }
    }
  }
}
